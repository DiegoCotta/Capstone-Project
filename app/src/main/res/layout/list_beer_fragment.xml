<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools">

    <br.com.zup.multistatelayout.MultiStateLayout
        android:id="@+id/msl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msl_state="content"
        app:msl_emptyLayout="@layout/ms_empty_view"
        app:msl_errorLayout="@layout/ms_error_view"
        app:msl_loadingLayout="@layout/ms_loading_view">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:context=".view.fragments.ListBeerFragment"
            tools:listitem="@layout/item_list_beer" />
        <com.google.android.gms.ads.AdView
            android:layout_gravity="center|bottom"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
    </br.com.zup.multistatelayout.MultiStateLayout>
</layout>
